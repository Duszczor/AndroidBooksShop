<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_koszyk"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


    <TextView
        android:id="@+id/textView_koszykName"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:text="TextView"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_koszykCena"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_koszyk"
        android:layout_alignParentStart="true"
        android:layout_marginStart="92dp"
        android:text="TextView"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView_koszykIlosc"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_koszyk"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:text="TextView"
        android:textSize="15dp" />

    <Button
        android:id="@+id/button_dodaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="98dp"
        android:text="+"
        android:textSize="36sp" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button_dodaj"
        android:layout_marginEnd="74dp"
        android:text="-"
        android:textSize="36sp" />
</RelativeLayout>